<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="@dimen/_5sdp"
        android:outlineAmbientShadowColor="@color/hard"
        app:cardBackgroundColor="@color/light6"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/cvOval"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_oval"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/hard"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/cvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffff"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="@color/medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Date-: "

                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView

                android:id="@+id/cvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12-12-2023"
                android:textColor="@color/light1"
                android:textStyle="bold"
                android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>